@model ShareItems_WebApp.Entities.UserCredential;
@{
    ViewData["Title"] = "Enter Code";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background: linear-gradient(135deg, #0f0f14 0%, #1a1a2e 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #e0e0e0;
    }

    .container-wrapper {
        width: 100%;
        max-width: 500px;
        padding: 20px;
    }

    .card {
        background: #161622;
        border-radius: 16px;
        padding: 48px 40px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(139, 92, 246, 0.1);
    }

    .app-name {
        text-align: center;
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 32px;
        background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.5px;
    }

    .hero-title {
        font-size: 28px;
        font-weight: 700;
        line-height: 1.3;
        margin-bottom: 16px;
        color: #f5f5f5;
        text-align: center;
    }

    .hero-subtitle {
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 40px;
        color: #a0a0a0;
        text-align: center;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 12px;
        color: #d0d0d0;
    }

    .form-input {
        width: 100%;
        padding: 14px 16px;
        font-size: 16px;
        border: 2px solid #2a2a3e;
        border-radius: 8px;
        background: #1e1e2e;
        color: #f5f5f5;
        transition: all 0.3s ease;
        outline: none;
        box-sizing: border-box;
    }

    .form-input::placeholder {
        color: #6a6a7a;
    }

    .form-input:focus {
        border-color: #8b5cf6;
        background: #212135;
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.15);
    }

    .submit-btn {
        width: 100%;
        padding: 14px 24px;
        font-size: 16px;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
        color: #ffffff;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(139, 92, 246, 0.4);
    }

    .submit-btn:active {
        transform: translateY(0);
    }

    .submit-btn:focus {
        outline: 2px solid #8b5cf6;
        outline-offset: 2px;
    }

    .footer-text {
        text-align: center;
        font-size: 14px;
        color: #7a7a8a;
        margin-top: 24px;
    }
        .card {
            padding: 32px 24px;
        }

        .hero-title {
            font-size: 24px;
        }

        .hero-subtitle {
            font-size: 15px;
        }

        .app-name {
            font-size: 20px;
        }
    }
</style>

<div class="container-wrapper">
    <div class="card">
        <div class="app-name">Instant Note Crypt</div>
        
        <h2 class="hero-title">The fastest and safest way to save notes anywhere</h2>
        <p class="hero-subtitle">No accounts. No signups. No installs. Just choose one code.</p>
        
        <form method="post" asp-action="Index">
            <div class="form-group">
                <label class="form-label">Let's try. Enter a new or used code now to open, encrypt and save notes with.</label>
                <input type="text" class="form-input" placeholder="Enter code" name="Code" required>
            </div>
            <button type="submit" class="submit-btn">Open</button>
        </form>
        
        <p class="footer-text">It's that simple</p>
    </div>
</div>
