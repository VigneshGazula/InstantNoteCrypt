@page "/Dashboard/{code}"
@model ShareItems_WebApp.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard - " + Model.Code;
}

<div class="dashboard-page">
    <!-- Main Glass Container -->
    <div class="dashboard-container">
        
        <!-- Header Section -->
        <div class="dashboard-header">
            <div class="header-content">
                <div class="header-left">
                    <h1 class="dashboard-title">Dashboard</h1>
                    <div class="code-badge">
                        <span class="badge-icon">??</span>
                        <span class="badge-text">@Model.Code</span>
                    </div>
                </div>
                <div class="header-right">
                    <a href="/" class="back-link">
                        <span class="back-icon">?</span>
                        <span>Home</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="dashboard-message success">
                <span class="message-icon">?</span>
                <span class="message-text">@Model.Message</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="dashboard-message error">
                <span class="message-icon">?</span>
                <span class="message-text">@Model.ErrorMessage</span>
            </div>
        }

        <!-- Navigation Tabs -->
        <div class="dashboard-tabs">
            <button type="button" class="tab-btn active" onclick="showTab('notes')">
                <span class="tab-icon">??</span>
                <span class="tab-text">Notes</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('documents')">
                <span class="tab-icon">??</span>
                <span class="tab-text">Documents</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('photos')">
                <span class="tab-icon">???</span>
                <span class="tab-text">Photos</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('videos')">
                <span class="tab-icon">??</span>
                <span class="tab-text">Videos</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('others')">
                <span class="tab-icon">??</span>
                <span class="tab-text">Others</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('security')">
                <span class="tab-icon">??</span>
                <span class="tab-text">Security</span>
            </button>
        </div>

        <!-- Tab Content Areas -->
        
        <!-- Notes Tab -->
        <div id="tab-notes" class="tab-content active">
            <div class="content-section">
                <h3 class="section-title">?? Note Content</h3>
                <p class="section-description">Write your encrypted note. All content is stored securely.</p>
                <form method="post" asp-page-handler="SaveNote" class="note-form">
                    <div class="note-editor">
                        <textarea name="content" class="note-textarea" rows="20" placeholder="Start writing your encrypted note here...&#10;&#10;• All content is encrypted&#10;• Auto-saved on submit&#10;• Accessible only with your code">@Model.NoteContent</textarea>
                        <div class="note-footer">
                            <span class="char-count">@(Model.NoteContent?.Length ?? 0) characters</span>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn-save-note">
                            <span class="btn-icon">??</span>
                            <span>Save Note</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Documents Tab -->
        <div id="tab-documents" class="tab-content">
            <div class="content-section">
                <h3 class="section-title">?? Upload Document</h3>
                <div class="upload-card">
                    <div class="upload-info">
                        <p class="info-text">
                            <strong>Supported formats:</strong> PDF, DOC, DOCX, TXT, RTF, ODT, PPT, PPTX, XLS, XLSX, CSV, MD, JSON, XML, YAML
                        </p>
                    </div>
                    <form method="post" asp-page-handler="UploadFile" enctype="multipart/form-data" class="upload-form">
                        <div class="file-input-group">
                            <label class="file-input-label">
                                <input type="file" id="file-doc" name="file" class="file-input" required />
                                <div class="file-input-display">
                                    <span class="file-icon">??</span>
                                    <span class="file-text">Choose Document File</span>
                                    <span class="file-hint">or drag and drop</span>
                                </div>
                            </label>
                        </div>
                        <button type="submit" class="btn-upload">
                            <span class="btn-icon">??</span>
                            <span>Upload Document</span>
                        </button>
                    </form>
                </div>
                
                <div class="files-section">
                    <form method="post" asp-page-handler="LoadFiles" style="display: inline;">
                        <input type="hidden" name="fileType" value="document" />
                        <button type="submit" class="btn-load-files">
                            <span class="btn-icon">??</span>
                            <span>Load Documents</span>
                        </button>
                    </form>
                    
                    @if (Model.Files != null && Model.Files.Any() && Model.CurrentFileType == "document")
                    {
                        @await Html.PartialAsync("_FilesList", Model)
                    }
                </div>
            </div>
        </div>

        <!-- Photos Tab -->
        <div id="tab-photos" class="tab-content">
            <div class="content-section">
                <h3 class="section-title">??? Upload Photo</h3>
                <div class="upload-card">
                    <div class="upload-info">
                        <p class="info-text">
                            <strong>Supported formats:</strong> JPG, JPEG, PNG, WEBP, GIF, BMP, TIFF, SVG, ICO, HEIC
                        </p>
                    </div>
                    <form method="post" asp-page-handler="UploadFile" enctype="multipart/form-data" class="upload-form">
                        <div class="file-input-group">
                            <label class="file-input-label">
                                <input type="file" id="file-img" name="file" class="file-input" accept="image/*" required />
                                <div class="file-input-display">
                                    <span class="file-icon">???</span>
                                    <span class="file-text">Choose Photo File</span>
                                    <span class="file-hint">or drag and drop</span>
                                </div>
                            </label>
                        </div>
                        <button type="submit" class="btn-upload">
                            <span class="btn-icon">??</span>
                            <span>Upload Photo</span>
                        </button>
                    </form>
                </div>
                
                <div class="files-section">
                    <form method="post" asp-page-handler="LoadFiles" style="display: inline;">
                        <input type="hidden" name="fileType" value="image" />
                        <button type="submit" class="btn-load-files">
                            <span class="btn-icon">??</span>
                            <span>Load Photos</span>
                        </button>
                    </form>
                    
                    @if (Model.Files != null && Model.Files.Any() && Model.CurrentFileType == "image")
                    {
                        @await Html.PartialAsync("_FilesList", Model)
                    }
                </div>
            </div>
        </div>

        <!-- Videos Tab -->
        <div id="tab-videos" class="tab-content">
            <div class="content-section">
                <h3 class="section-title">?? Upload Video</h3>
                <div class="upload-card">
                    <div class="upload-info">
                        <p class="info-text">
                            <strong>Supported formats:</strong> MP4, MOV, MKV, WEBM, AVI, WMV, FLV, M4V, 3GP
                        </p>
                    </div>
                    <form method="post" asp-page-handler="UploadFile" enctype="multipart/form-data" class="upload-form">
                        <div class="file-input-group">
                            <label class="file-input-label">
                                <input type="file" id="file-vid" name="file" class="file-input" accept="video/*" required />
                                <div class="file-input-display">
                                    <span class="file-icon">??</span>
                                    <span class="file-text">Choose Video File</span>
                                    <span class="file-hint">or drag and drop</span>
                                </div>
                            </label>
                        </div>
                        <button type="submit" class="btn-upload">
                            <span class="btn-icon">??</span>
                            <span>Upload Video</span>
                        </button>
                    </form>
                </div>
                
                <div class="files-section">
                    <form method="post" asp-page-handler="LoadFiles" style="display: inline;">
                        <input type="hidden" name="fileType" value="video" />
                        <button type="submit" class="btn-load-files">
                            <span class="btn-icon">??</span>
                            <span>Load Videos</span>
                        </button>
                    </form>
                    
                    @if (Model.Files != null && Model.Files.Any() && Model.CurrentFileType == "video")
                    {
                        @await Html.PartialAsync("_FilesList", Model)
                    }
                </div>
            </div>
        </div>

        <!-- Others Tab -->
        <div id="tab-others" class="tab-content">
            <div class="content-section">
                <h3 class="section-title">?? Upload Other Files</h3>
                <div class="upload-card">
                    <div class="upload-info">
                        <p class="info-text">
                            <strong>Supported formats:</strong> ZIP, RAR, 7Z, TAR, GZ, PSD, AI, Figma, Blend, OBJ, STL, LOG, DAT
                        </p>
                        <p class="warning-text">
                            <span class="warning-icon">??</span>
                            <strong>Not allowed:</strong> Executable files (EXE, BAT, CMD, SH, PS1, JS, VBS, JAR, PHP, PY, RB)
                        </p>
                    </div>
                    <form method="post" asp-page-handler="UploadFile" enctype="multipart/form-data" class="upload-form">
                        <div class="file-input-group">
                            <label class="file-input-label">
                                <input type="file" id="file-other" name="file" class="file-input" required />
                                <div class="file-input-display">
                                    <span class="file-icon">??</span>
                                    <span class="file-text">Choose File</span>
                                    <span class="file-hint">or drag and drop</span>
                                </div>
                            </label>
                        </div>
                        <button type="submit" class="btn-upload">
                            <span class="btn-icon">??</span>
                            <span>Upload File</span>
                        </button>
                    </form>
                </div>
                
                <div class="files-section">
                    <form method="post" asp-page-handler="LoadFiles" style="display: inline;">
                        <input type="hidden" name="fileType" value="others" />
                        <button type="submit" class="btn-load-files">
                            <span class="btn-icon">??</span>
                            <span>Load Other Files</span>
                        </button>
                    </form>
                    
                    @if (Model.Files != null && Model.Files.Any() && Model.CurrentFileType == "others")
                    {
                        @await Html.PartialAsync("_FilesList", Model)
                    }
                </div>
            </div>
        </div>

        <!-- Security Tab -->
        <div id="tab-security" class="tab-content">
            <div class="content-section">
                <h3 class="section-title">?? Security Settings</h3>
                
                <div class="security-status">
                    <div class="status-indicator @(Model.HasPin ? "locked" : "unlocked")">
                        <span class="status-icon">@(Model.HasPin ? "??" : "??")</span>
                        <span class="status-text">@(Model.HasPin ? "Locked" : "Unlocked")</span>
                    </div>
                </div>

                @if (!Model.HasPin)
                {
                    <div class="security-card">
                        <h4 class="card-title">Set PIN Protection</h4>
                        <form method="post" asp-page-handler="SetPin" class="security-form">
                            <div class="form-group">
                                <label for="pin">Enter PIN</label>
                                <input type="password" id="pin" name="pin" class="form-input" required minlength="4" placeholder="Minimum 4 characters" />
                            </div>
                            <div class="form-group">
                                <label for="confirmPin">Confirm PIN</label>
                                <input type="password" id="confirmPin" name="confirmPin" class="form-input" required minlength="4" placeholder="Re-enter PIN" />
                            </div>
                            <button type="submit" class="btn-primary">
                                <span class="btn-icon">??</span>
                                <span>Lock Note</span>
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="security-card">
                        <h4 class="card-title">Update PIN</h4>
                        <form method="post" asp-page-handler="UpdatePin" class="security-form">
                            <div class="form-group">
                                <label for="currentPin">Current PIN</label>
                                <input type="password" id="currentPin" name="currentPin" class="form-input" required />
                            </div>
                            <div class="form-group">
                                <label for="newPin">New PIN</label>
                                <input type="password" id="newPin" name="newPin" class="form-input" required minlength="4" />
                            </div>
                            <div class="form-group">
                                <label for="confirmNewPin">Confirm New PIN</label>
                                <input type="password" id="confirmNewPin" name="confirmNewPin" class="form-input" required minlength="4" />
                            </div>
                            <button type="submit" class="btn-primary">
                                <span class="btn-icon">??</span>
                                <span>Update PIN</span>
                            </button>
                        </form>
                    </div>

                    <div class="security-card">
                        <h4 class="card-title">Remove PIN Protection</h4>
                        <form method="post" asp-page-handler="RemovePin" class="security-form">
                            <div class="form-group">
                                <label for="removePin">Enter Current PIN</label>
                                <input type="password" id="removePin" name="removePin" class="form-input" required />
                            </div>
                            <button type="submit" class="btn-secondary">
                                <span class="btn-icon">??</span>
                                <span>Unlock Note</span>
                            </button>
                        </form>
                    </div>
                }

                <!-- Danger Zone -->
                <div class="danger-zone">
                    <h4 class="danger-title">?? Danger Zone</h4>
                    <p class="danger-description">This will permanently delete the note and all associated files. This action cannot be undone.</p>
                    
                    @if (Model.HasPin)
                    {
                        <form method="post" asp-page-handler="DestroyNote" class="danger-form">
                            <div class="form-group">
                                <label for="destroyPin">Enter PIN to Confirm</label>
                                <input type="password" id="destroyPin" name="destroyPin" class="form-input" required />
                            </div>
                            <button type="submit" class="btn-danger">
                                <span class="btn-icon">??</span>
                                <span>Destroy Note</span>
                            </button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="DestroyNote" onsubmit="return confirm('Are you sure you want to permanently delete this note and all files? This cannot be undone!');" class="danger-form">
                            <button type="submit" class="btn-danger">
                                <span class="btn-icon">??</span>
                                <span>Destroy Note</span>
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Preview Modal -->
<div id="previewModal" class="preview-modal">
    <div class="modal-content">
        <span onclick="closePreview()" class="modal-close">&times;</span>
        <h2 id="previewTitle" class="modal-title">File Preview</h2>
        <div id="previewContent" class="modal-body"></div>
    </div>
</div>

<script>
    // Tab switching
    function showTab(tabName) {
        // Hide all tabs
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.classList.remove('active');
        });
        
        // Remove active class from all buttons
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        
        // Show selected tab
        const selectedTab = document.getElementById('tab-' + tabName);
        if (selectedTab) {
            selectedTab.classList.add('active');
        }
        
        // Add active class to clicked button
        event.target.closest('.tab-btn').classList.add('active');
    }
    
    // Preview functions
    function previewFile(fileId, fileType, fileName) {
        const modal = document.getElementById('previewModal');
        const title = document.getElementById('previewTitle');
        const content = document.getElementById('previewContent');
        
        title.textContent = fileName;
        const fileUrl = '/Dashboard/@Model.Code?handler=Download&fileId=' + fileId;
        content.innerHTML = '';
        
        if (fileType === 'image') {
            content.innerHTML = '<img src="' + fileUrl + '" style="max-width: 100%; height: auto; border-radius: 8px;" />';
        } else if (fileType === 'video') {
            content.innerHTML = '<video controls style="max-width: 100%; height: auto; border-radius: 8px;"><source src="' + fileUrl + '">Your browser does not support video preview.</video>';
        } else if (fileType === 'document') {
            if (fileName.toLowerCase().endsWith('.pdf')) {
                content.innerHTML = '<iframe src="' + fileUrl + '" style="width: 100%; height: 600px; border: none; border-radius: 8px;"></iframe>';
            } else if (fileName.toLowerCase().match(/\.(txt|md|json|xml|yaml|yml|csv)$/)) {
                fetch(fileUrl)
                    .then(response => response.text())
                    .then(text => {
                        content.innerHTML = '<pre style="background: rgba(0,0,0,0.3); color: #e5e7eb; padding: 15px; border-radius: 8px; overflow: auto; max-height: 600px;">' + escapeHtml(text) + '</pre>';
                    })
                    .catch(err => {
                        content.innerHTML = '<p>Cannot preview this file. <a href="' + fileUrl + '" download style="color: #7c7cff;">Download instead</a></p>';
                    });
            } else {
                content.innerHTML = '<p>Preview not available for this document type. <a href="' + fileUrl + '" download style="color: #7c7cff;">Download to view</a></p>';
            }
        } else {
            content.innerHTML = '<p>Preview not available for this file type. <a href="' + fileUrl + '" download style="color: #7c7cff;">Download to view</a></p>';
        }
        
        modal.style.display = 'block';
    }
    
    function closePreview() {
        document.getElementById('previewModal').style.display = 'none';
    }
    
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
    
    function deleteFile(fileId, fileName) {
        if (confirm('Are you sure you want to delete "' + fileName + '"? This action cannot be undone.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Dashboard/@Model.Code?handler=DeleteFile';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'fileId';
            input.value = fileId;
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }
    
    window.onclick = function(event) {
        const modal = document.getElementById('previewModal');
        if (event.target == modal) {
            closePreview();
        }
    }
</script>

