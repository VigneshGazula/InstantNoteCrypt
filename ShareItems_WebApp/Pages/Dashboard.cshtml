@page "/Dashboard/{code}"
@model ShareItems_WebApp.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard - " + Model.Code;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Dashboard Glassmorphism Styles - Matching Global Theme */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, BlinkMacSystemFont, 
                         'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 
                         'Noto Color Emoji', sans-serif;
            margin: 0;
            padding: 0;
            background: #0b0f1a;
            color: #e5e7eb;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated Background Depth */
        body::before {
            content: '';
            position: fixed;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(
                circle at 30% 20%, 
                rgba(124, 124, 255, 0.08) 0%, 
                transparent 50%
            );
            animation: float 35s ease-in-out infinite;
            pointer-events: none;
            z-index: 0;
        }

        body::after {
            content: '';
            position: fixed;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(
                circle at 70% 80%, 
                rgba(124, 124, 255, 0.05) 0%, 
                transparent 50%
            );
            animation: float 40s ease-in-out infinite reverse;
            pointer-events: none;
            z-index: 0;
        }

        @@keyframes float {
            0%, 100% {
                transform: translate(0, 0) rotate(0deg);
            }
            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }
            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        .dashboard-page {
            min-height: 100vh;
            padding: 2rem 1rem;
            position: relative;
            z-index: 1;
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 24px;
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            overflow: hidden;
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Header */
        .dashboard-header {
            padding: 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            flex-wrap: wrap;
        }

        .dashboard-title {
            font-size: 2rem;
            font-weight: 700;
            color: #e5e7eb;
            margin: 0;
            letter-spacing: -0.02em;
        }

        .code-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.6rem 1.25rem;
            background: rgba(124, 124, 255, 0.15);
            border: 1px solid rgba(124, 124, 255, 0.3);
            border-radius: 12px;
            color: #7c7cff;
            font-weight: 600;
        }

        .badge-icon {
            font-size: 1.2rem;
        }

        .badge-text {
            font-family: 'Courier New', monospace;
            font-size: 1rem;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.6rem 1.25rem;
            background: rgba(255, 255, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 10px;
            color: #e5e7eb;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .back-link:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
            color: #7c7cff;
        }

        .back-icon {
            font-size: 1.3rem;
        }

        /* Messages */
        .dashboard-message {
            margin: 1.5rem 2rem;
            padding: 1rem 1.25rem;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.95rem;
            animation: slideIn 0.4s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .dashboard-message.success {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #22c55e;
        }

        .dashboard-message.error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .message-icon {
            font-size: 1.2rem;
        }

        /* Tabs */
        .dashboard-tabs {
            display: flex;
            gap: 0.5rem;
            padding: 1.5rem 2rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            overflow-x: auto;
        }

        .tab-btn {
            flex-shrink: 0;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.25rem;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-bottom: none;
            border-radius: 12px 12px 0 0;
            color: #9ca3af;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            font-weight: 500;
            font-family: inherit;
        }

        .tab-btn:hover {
            background: rgba(255, 255, 255, 0.08);
            color: #e5e7eb;
        }

        .tab-btn.active {
            background: rgba(124, 124, 255, 0.15);
            border-color: #7c7cff;
            color: #7c7cff;
        }

        .tab-icon {
            font-size: 1.1rem;
        }

        /* Tab Content */
        .tab-content {
            display: none;
            padding: 2rem;
        }

        .tab-content.active {
            display: block;
        }

        .content-section {
            max-width: 900px;
        }

        .section-title {
            font-size: 1.35rem;
            color: #e5e7eb;
            margin: 0 0 0.75rem 0;
            font-weight: 600;
        }

        .section-description {
            color: #9ca3af;
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
        }

        /* Note Editor */
        .note-editor {
            background: rgba(255, 255, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .note-editor:focus-within {
            border-color: #7c7cff;
            box-shadow: 0 0 0 3px rgba(124, 124, 255, 0.15);
        }

        .note-textarea {
            width: 100%;
            min-height: 500px;
            padding: 1.5rem;
            background: transparent;
            border: none;
            color: #e5e7eb;
            font-size: 1rem;
            line-height: 1.7;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            resize: vertical;
        }

        .note-textarea:focus {
            outline: none;
        }

        .note-textarea::placeholder {
            color: #9ca3af;
        }

        .note-footer {
            padding: 0.75rem 1.5rem;
            background: rgba(255, 255, 255, 0.03);
            border-top: 1px solid rgba(255, 255, 255, 0.08);
        }

        .char-count {
            color: #9ca3af;
            font-size: 0.85rem;
            font-family: 'Courier New', monospace;
        }

        .btn-save-note {
            margin-top: 1.5rem;
            padding: 1rem 2rem;
            background: #7c7cff;
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 16px rgba(124, 124, 255, 0.35);
            font-family: inherit;
        }

        .btn-save-note:hover {
            background: #9d9dff;
            box-shadow: 0 6px 20px rgba(124, 124, 255, 0.5);
            transform: translateY(-2px);
        }

        /* Upload Card */
        .upload-card {
            background: rgba(255, 255, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        /* Upload Loading Spinner */
        .upload-loading {
            display: none;
            margin-top: 1rem;
            text-align: center;
            padding: 1rem;
            background: rgba(124, 124, 255, 0.1);
            border: 1px solid rgba(124, 124, 255, 0.3);
            border-radius: 12px;
            color: #7c7cff;
        }

        .upload-loading.active {
            display: block;
        }

        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(124, 124, 255, 0.3);
            border-top-color: #7c7cff;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-right: 0.5rem;
            vertical-align: middle;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        .btn-upload:disabled,
        .btn-load-files:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            pointer-events: none;
        }

        .file-selected {
            margin-top: 1rem;
            padding: 0.75rem 1rem;
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            border-radius: 8px;
            color: #22c55e;
            font-size: 0.9rem;
            display: none;
        }

        .file-selected.show {
            display: block;
        }

        .upload-info {
            margin-bottom: 1.5rem;
            padding: 1rem 1.25rem;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 12px;
        }

        .info-text {
            color: #9ca3af;
            font-size: 0.9rem;
            margin: 0;
        }

        .info-text strong {
            color: #e5e7eb;
        }

        .warning-text {
            color: #ef4444;
            font-size: 0.9rem;
            margin-top: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .file-input-label {
            display: block;
            cursor: pointer;
        }

        .file-input {
            display: none;
        }

        .file-input-display {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 3rem 2rem;
            background: rgba(255, 255, 255, 0.04);
            border: 2px dashed rgba(255, 255, 255, 0.12);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .file-input-display:hover {
            background: rgba(255, 255, 255, 0.06);
            border-color: #7c7cff;
            box-shadow: 0 0 20px rgba(124, 124, 255, 0.15);
        }

        .file-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .file-text {
            color: #e5e7eb;
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .file-hint {
            color: #9ca3af;
            font-size: 0.9rem;
        }

        .btn-upload,
        .btn-load-files {
            width: 100%;
            padding: 1rem 1.5rem;
            background: #7c7cff;
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 16px rgba(124, 124, 255, 0.35);
            font-family: inherit;
            margin-top: 1rem;
        }

        .btn-upload:hover,
        .btn-load-files:hover {
            background: #9d9dff;
            box-shadow: 0 6px 20px rgba(124, 124, 255, 0.5);
            transform: translateY(-2px);
        }

        .btn-load-files {
            background: rgba(255, 255, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.12);
            color: #e5e7eb;
            box-shadow: none;
        }

        .btn-load-files:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: none;
        }

        /* Security */
        .security-status {
            margin-bottom: 2rem;
        }

        .status-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
        }

        .status-indicator.locked {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #22c55e;
        }

        .status-indicator.unlocked {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .status-icon {
            font-size: 1.5rem;
        }

        .security-card {
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .card-title {
            color: #e5e7eb;
            font-size: 1.1rem;
            margin: 0 0 1rem 0;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-group label {
            display: block;
            color: #e5e7eb;
            font-size: 0.9rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 8px;
            color: #e5e7eb;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #7c7cff;
            background: rgba(255, 255, 255, 0.08);
            box-shadow: 0 0 0 3px rgba(124, 124, 255, 0.15);
        }

        .btn-primary,
        .btn-secondary,
        .btn-danger {
            padding: 0.875rem 1.5rem;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-family: inherit;
        }

        .btn-primary {
            background: #7c7cff;
            color: white;
            box-shadow: 0 4px 12px rgba(124, 124, 255, 0.35);
        }

        .btn-primary:hover {
            background: #9d9dff;
            box-shadow: 0 6px 16px rgba(124, 124, 255, 0.45);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.06);
            color: #e5e7eb;
            border: 1px solid rgba(255, 255, 255, 0.12);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .danger-zone {
            background: rgba(239, 68, 68, 0.05);
            border: 2px solid rgba(239, 68, 68, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 2rem;
        }

        .danger-title {
            color: #ef4444;
            font-size: 1.1rem;
            margin: 0 0 0.5rem 0;
            font-weight: 600;
        }

        .danger-description {
            color: #9ca3af;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .btn-danger {
            background: #ef4444;
            color: white;
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.35);
        }

        .btn-danger:hover {
            background: #dc2626;
            box-shadow: 0 6px 16px rgba(239, 68, 68, 0.45);
            transform: translateY(-2px);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .dashboard-page {
                padding: 1rem 0.5rem;
            }

            .dashboard-container {
                border-radius: 16px;
            }

            .dashboard-header,
            .tab-content {
                padding: 1.5rem;
            }

            .dashboard-tabs {
                padding: 1rem 1.5rem 0;
                flex-wrap: wrap;
                gap: 0.75rem;
            }

            .tab-btn {
                flex: 1 1 calc(50% - 0.375rem);
                min-width: 140px;
                justify-content: center;
            }

            .header-content {
                flex-direction: column;
                align-items: flex-start;
                gap: 1.5rem;
            }

            .header-left {
                width: 100%;
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .back-link {
                width: 100%;
                justify-content: center;
            }
        }

        @@media (max-width: 640px) {
            .tab-btn {
                flex: 1 1 100%;
            }
        }

        @@media (max-width: 480px) {
            .dashboard-container {
                border-radius: 12px;
            }

            .note-textarea {
                min-height: 300px;
            }

            .file-input-display {
                padding: 1.5rem 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Main Glass Container -->
    <div class="dashboard-container">
        
        <!-- Header Section -->
        <div class="dashboard-header">
            <div class="header-content">
                <div class="header-left">
                    <h1 class="dashboard-title">CodeSafe</h1>
                    <div class="code-badge">
                        <span class="badge-icon">🔑</span>
                        <span class="badge-text">@Model.Code</span>
                    </div>
                </div>
                <div class="header-right">
                    <a href="/" class="back-link">
                        <span class="back-icon">←</span>
                        <span>Home</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="dashboard-message success">
                <span class="message-icon">✓</span>
                <span class="message-text">@Model.Message</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="dashboard-message error">
                <span class="message-icon">⚠</span>
                <span class="message-text">@Model.ErrorMessage</span>
            </div>
        }

        <!-- Navigation Tabs -->
        <div class="dashboard-tabs">
            <button type="button" class="tab-btn active" onclick="showTab('notes')">
                <span class="tab-icon">📝</span>
                <span class="tab-text">Notes</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('documents')">
                <span class="tab-icon">📄</span>
                <span class="tab-text">Documents</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('photos')">
                <span class="tab-icon">🖼️</span>
                <span class="tab-text">Photos</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('videos')">
                <span class="tab-icon">🎬</span>
                <span class="tab-text">Videos</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('others')">
                <span class="tab-icon">📦</span>
                <span class="tab-text">Others</span>
            </button>
            <button type="button" class="tab-btn" onclick="showTab('security')">
                <span class="tab-icon">🔒</span>
                <span class="tab-text">Security</span>
            </button>
        </div>

        <!-- Tab Content Areas -->

        
<!-- Notes Tab -->
<div id="tab-notes" class="tab-content active">
    <div class="content-section">
        <h3 class="section-title">📝 Note Content</h3>
        <p class="section-description">Write your encrypted note. All content is stored securely.</p>
        <form method="post" asp-page-handler="SaveNote" class="note-form">
            <div class="note-editor">
                <textarea id="noteContent" name="content" class="note-textarea" rows="20" placeholder="Start writing your encrypted note here...&#10;&#10;• All content is encrypted&#10;• Auto-saved on submit&#10;• Accessible only with your code">@Model.NoteContent</textarea>
                <div class="note-footer">
                    <span id="charCount" class="char-count">@(Model.NoteContent?.Length ?? 0) characters</span>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn-save-note">
                    <span class="btn-icon">💾</span>
                    <span>Save Note</span>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Documents Tab -->
<div id="tab-documents" class="tab-content">
    <div class="content-section">
        <h3 class="section-title">📄 Upload Document</h3>
        <div class="upload-card">
            <div class="upload-info">
                <p class="info-text">
                    <strong>Supported formats:</strong> PDF, DOC, DOCX, TXT, RTF, ODT, PPT, PPTX, XLS, XLSX, CSV, MD, JSON, XML, YAML
                </p>
            </div>
            <form method="post" asp-page-handler="UploadFile" enctype="multipart/form-data" class="upload-form" id="uploadForm-doc" onsubmit="return handleUploadSubmit(this)">
                <div class="file-input-group">
                    <label class="file-input-label">
                        <input type="file" id="file-doc" name="file" class="file-input" required onchange="handleFileSelect(this, 'selected-doc')" />
                        <div class="file-input-display">
                            <span class="file-icon">📎</span>
                            <span class="file-text">Choose Document File</span>
                            <span class="file-hint">or drag and drop</span>
                        </div>
                    </label>
                </div>
                <div id="selected-doc" class="file-selected"></div>
                <button type="submit" class="btn-upload" id="uploadBtn-doc">
                    <span class="btn-icon">⬆️</span>
                    <span class="btn-text">Upload Document</span>
                </button>
                <div id="uploadLoading-doc" class="upload-loading">
                    <span class="spinner"></span>
                    <span>Uploading...</span>
                </div>
            </form>
        </div>
                
        <div class="files-section">
            <form method="post" asp-page-handler="LoadFiles" style="display: inline;">
                <input type="hidden" name="fileType" value="document" />
                <button type="submit" class="btn-load-files">
                    <span class="btn-icon">📂</span>
