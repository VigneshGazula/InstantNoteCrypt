@page
@model ShareItems_WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "CodeSafe - Secure Note Access";
    Layout = "~/Shared/_Layout.cshtml";
}

<div class="index-container">
    <div class="index-glass-card">
        <!-- App Branding -->
        <div class="index-header">
            <h1 class="index-title">🔒 CodeSafe</h1>
            <p class="index-subtitle">Secure. Simple. Encrypted.</p>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="index-message success">
                <span>✓</span> @Model.Message
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="index-message error">
                <span>⚠</span> @Model.ErrorMessage
            </div>
        }

        <!-- Access Form -->
        <form method="post" class="index-form">
            <div class="index-form-group">
                <label for="code" class="index-label">Enter Your Code</label>
                <input 
                    type="text" 
                    id="code" 
                    name="code" 
                    class="index-input"
                    placeholder="e.g., mysecret123"
                    required 
                    autocomplete="off"
                    spellcheck="false" />
                <small class="index-hint">Your unique access code for the encrypted note</small>
            </div>

            <button type="submit" class="index-unlock-btn">
                <span class="btn-icon">🔓</span>
                <span class="btn-text">Unlock Note</span>
            </button>
        </form>

        <!-- Footer Info -->
        <div class="index-footer">
            <p class="index-info">
                <span class="info-icon">🔐</span>
                End-to-end encrypted. Zero knowledge architecture.
            </p>
        </div>
    </div>
</div>


<style>
/* ===================================
   INDEX PAGE SPECIFIC STYLES
   =================================== */

.index-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.index-glass-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-card);
    padding: 3rem;
    max-width: 480px;
    width: 100%;
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    animation: fadeInUp 0.6s ease-out;
}

/* Header */
.index-header {
    text-align: center;
    margin-bottom: 2.5rem;
}

.index-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
}

.index-subtitle {
    font-size: 1rem;
    color: var(--text-muted);
    margin: 0;
    font-weight: 400;
}

/* Messages */
.index-message {
    padding: 1rem 1.25rem;
    border-radius: var(--border-radius-input);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    animation: slideIn 0.4s ease-out;
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
}

.index-message.success {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: var(--success-color);
}

.index-message.error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: var(--error-color);
}

.index-message span:first-child {
    font-size: 1.1rem;
}

/* Form */
.index-form {
    margin-bottom: 2rem;
}

.index-form-group {
    margin-bottom: 1.5rem;
}

.index-label {
    display: block;
    color: var(--text-primary);
    font-size: 0.95rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
}

.index-input {
    width: 100%;
    padding: 1rem 1.25rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-input);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all var(--transition-smooth);
    font-family: inherit;
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
}

.index-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 4px var(--accent-glow);
}

.index-input::placeholder {
    color: var(--text-muted);
}

.index-hint {
    display: block;
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-top: 0.5rem;
}

/* Unlock Button */
.index-unlock-btn {
    width: 100%;
    padding: 1rem 1.5rem;
    background: var(--accent-primary);
    border: none;
    border-radius: var(--border-radius-input);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all var(--transition-smooth);
    box-shadow: 0 4px 16px var(--accent-glow);
    font-family: inherit;
}

.index-unlock-btn:hover {
    background: #9d9dff;
    box-shadow: 0 6px 20px rgba(124, 124, 255, 0.5);
    transform: translateY(-2px);
}

.index-unlock-btn:active {
    transform: translateY(0);
    box-shadow: 0 2px 12px var(--accent-glow);
}

.index-unlock-btn:focus {
    outline: none;
    box-shadow: 0 0 0 4px rgba(124, 124, 255, 0.2), 0 4px 16px var(--accent-glow);
}

.btn-icon {
    font-size: 1.2rem;
}

.btn-text {
    font-size: 1rem;
}

/* Footer */
.index-footer {
    text-align: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--glass-border);
}

.index-info {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.info-icon {
    font-size: 1rem;
}

/* Responsive */
@@media (max-width: 768px) {
    .index-container {
        padding: 1.5rem;
    }

    .index-glass-card {
        padding: 2rem;
    }

    .index-title {
        font-size: 2rem;
    }

    .index-subtitle {
        font-size: 0.9rem;
    }
}

@@media (max-width: 480px) {
    .index-container {
        padding: 1rem;
    }

    .index-glass-card {
        padding: 1.5rem;
        border-radius: 20px;
    }

    .index-title {
        font-size: 1.75rem;
    }
}
</style>

