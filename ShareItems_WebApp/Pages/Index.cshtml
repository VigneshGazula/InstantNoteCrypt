@page
@model ShareItems_WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "CodeSafe - Secure Note Access";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
<!-- CodeSafe Box - First Section -->
<div class="index-container">
    <div class="index-glass-card">
        <!-- App Branding -->
        <div class="index-header">
            <h1 class="index-title">CodeSafe</h1>
            <p class="index-subtitle">Secure. Simple. Encrypted.</p>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="index-message success">
                <span>✓</span> @Model.Message
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="index-message error">
                <span>⚠</span> @Model.ErrorMessage
            </div>
        }

        <!-- Access Form -->
        <form method="post" class="index-form">
            <div class="index-form-group">
                <label for="code" class="index-label">Enter Your Code</label>
                <input 
                    type="text" 
                    id="code" 
                    name="code" 
                    class="index-input"
                    placeholder="e.g., mysecret123"
                    required 
                    autocomplete="off"
                    spellcheck="false" />
                <small class="index-hint">Your unique access code for the encrypted note</small>
            </div>

            <button type="submit" class="index-unlock-btn">
                <span class="btn-icon">🔓</span>
                <span class="btn-text">Unlock Note</span>
            </button>
        </form>

        <!-- Footer Info -->
        <div class="index-footer">
            <p class="index-info">
                <span class="info-icon">🔐</span>
                End-to-end encrypted. Zero knowledge architecture.
            </p>
        </div>
    </div>
</div>

<!-- About Section - Second Section -->
<div class="about-section">
        <div class="about-card">
            <h2 class="about-title">🛡️ What is CodeSafe?</h2>
            <p class="about-text">
                CodeSafe is a secure platform that allows you to store notes and files using a unique access code. 
                All data is protected and can only be accessed by users who know the correct code. 
                An optional PIN provides an additional layer of protection for sensitive content.
            </p>
            <p class="about-text">
                The platform operates on a zero-knowledge architecture, meaning your data is encrypted and 
                we do not require user accounts or track personal identity. Your privacy is our priority.
            </p>
        </div>

        <!-- Use Cases -->
        <div class="use-cases-card">
            <h3 class="use-cases-title">📌 Perfect For</h3>
            <ul class="use-cases-list">
                <li class="use-case-item">
                    <span class="use-case-icon">💬</span>
                    <div class="use-case-content">
                        <strong>Temporary Secure Note Sharing</strong>
                        <p>Share sensitive information with colleagues or friends without email or messaging apps</p>
                    </div>
                </li>
                <li class="use-case-item">
                    <span class="use-case-icon">📄</span>
                    <div class="use-case-content">
                        <strong>Personal Reference Documents</strong>
                        <p>Store important documents, passwords, or notes you need to access from anywhere</p>
                    </div>
                </li>
                <li class="use-case-item">
                    <span class="use-case-icon">🔄</span>
                    <div class="use-case-content">
                        <strong>Secure File Transfer</strong>
                        <p>Share files securely without size limitations from email providers</p>
                    </div>
                </li>
                <li class="use-case-item">
                    <span class="use-case-icon">🎯</span>
                    <div class="use-case-content">
                        <strong>Quick Access Storage</strong>
                        <p>Store temporary data you need to access across different devices</p>
                    </div>
                </li>
            </ul>
        </div>

        <!-- Privacy & Responsibility Notice -->
        <div class="policy-card">
            <h3 class="policy-title">⚠️ User Responsibility Notice</h3>
            <div class="policy-content">
                <p class="policy-text">
                    <strong>You are solely responsible for the content you upload or store on this platform.</strong>
                </p>
                <p class="policy-text">
                    The developers of this site do not access, monitor, or control user data and are not responsible 
                    for any data loss or information leaks caused by user actions.
                </p>
                <p class="policy-text">
                    Users are <strong>strongly advised to enable PIN protection</strong> when storing important or sensitive files.
                </p>
                <p class="policy-warning">
                    <span class="warning-icon-large">🚫</span>
                    Do not upload illegal, harmful, or confidential data that you are not authorized to store.
                </p>
            </div>
        </div>
    </div>
</div>


<style>
/* ===================================
   INDEX PAGE SPECIFIC STYLES
   =================================== */

.page-wrapper {
    min-height: 100vh;
    padding: 2rem 0;
}

.index-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    min-height: 100vh;
}

.index-glass-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-card);
    padding: 3rem;
    max-width: 480px;
    width: 100%;
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    animation: fadeInUp 0.6s ease-out;
}

/* Header */
.index-header {
    text-align: center;
    margin-bottom: 2.5rem;
}

.index-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
}

.index-subtitle {
    font-size: 1rem;
    color: var(--text-muted);
    margin: 0;
    font-weight: 400;
}

/* Messages */
.index-message {
    padding: 1rem 1.25rem;
    border-radius: var(--border-radius-input);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    animation: slideIn 0.4s ease-out;
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
}

.index-message.success {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: var(--success-color);
}

.index-message.error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: var(--error-color);
}

.index-message span:first-child {
    font-size: 1.1rem;
}

/* Form */
.index-form {
    margin-bottom: 2rem;
}

.index-form-group {
    margin-bottom: 1.5rem;
}

.index-label {
    display: block;
    color: var(--text-primary);
    font-size: 0.95rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
}

.index-input {
    width: 100%;
    padding: 1rem 1.25rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-input);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all var(--transition-smooth);
    font-family: inherit;
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
}

.index-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 4px var(--accent-glow);
}

.index-input::placeholder {
    color: var(--text-muted);
}

.index-hint {
    display: block;
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-top: 0.5rem;
}

/* Unlock Button */
.index-unlock-btn {
    width: 100%;
    padding: 1rem 1.5rem;
    background: var(--accent-primary);
    border: none;
    border-radius: var(--border-radius-input);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all var(--transition-smooth);
    box-shadow: 0 4px 16px var(--accent-glow);
    font-family: inherit;
}

.index-unlock-btn:hover {
    background: #9d9dff;
    box-shadow: 0 6px 20px rgba(124, 124, 255, 0.5);
    transform: translateY(-2px);
}

.index-unlock-btn:active {
    transform: translateY(0);
    box-shadow: 0 2px 12px var(--accent-glow);
}

.index-unlock-btn:focus {
    outline: none;
    box-shadow: 0 0 0 4px rgba(124, 124, 255, 0.2), 0 4px 16px var(--accent-glow);
}

.btn-icon {
    font-size: 1.2rem;
}

.btn-text {
    font-size: 1rem;
}

/* Footer */
.index-footer {
    text-align: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--glass-border);
}

.index-info {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.info-icon {
    font-size: 1rem;
}

/* Responsive */
@@media (max-width: 768px) {
    .page-wrapper {
        padding: 1rem 0;
    }

    .index-container {
        padding: 1.5rem;
        min-height: auto;
    }

    .index-glass-card {
        padding: 2rem;
    }

    .index-title {
        font-size: 2rem;
    }

    .index-subtitle {
        font-size: 0.9rem;
    }
}

@@media (max-width: 480px) {
    .index-container {
        padding: 1rem;
    }

    .index-glass-card {
        padding: 1.5rem;
        border-radius: 20px;
    }

    .index-title {
        font-size: 1.75rem;
    }
}

/* ===================================
   ABOUT & POLICY SECTIONS
   =================================== */

.about-section {
    max-width: 900px;
    margin: 0 auto 2rem;
    padding: 0 2rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.about-card,
.use-cases-card,
.policy-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-card);
    padding: 2.5rem;
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    animation: fadeInUp 0.6s ease-out;
}

.about-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1.5rem 0;
    text-align: center;
}

.about-text {
    color: var(--text-muted);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 1rem;
}

.about-text:last-child {
    margin-bottom: 0;
}

/* Use Cases */
.use-cases-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 1.5rem 0;
    text-align: center;
}

.use-cases-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
}

.use-case-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    transition: all 0.3s ease;
}

.use-case-item:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(124, 124, 255, 0.3);
    transform: translateX(5px);
}

.use-case-icon {
    font-size: 1.75rem;
    flex-shrink: 0;
    margin-top: 0.25rem;
}

.use-case-content {
    flex: 1;
}

.use-case-content strong {
    display: block;
    color: var(--text-primary);
    font-size: 1.05rem;
    margin-bottom: 0.5rem;
}

.use-case-content p {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin: 0;
    line-height: 1.5;
}

/* Policy Card */
.policy-card {
    background: rgba(239, 68, 68, 0.05);
    border: 2px solid rgba(239, 68, 68, 0.2);
}

.policy-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--error-color);
    margin: 0 0 1.5rem 0;
    text-align: center;
}

.policy-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.policy-text {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.7;
    margin: 0;
}

.policy-text strong {
    color: var(--text-primary);
}

.policy-warning {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 10px;
    color: var(--error-color);
    font-size: 0.95rem;
    font-weight: 500;
    margin-top: 0.5rem;
}

.warning-icon-large {
    font-size: 2rem;
    flex-shrink: 0;
}

/* Animations */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive for About Section */
@@media (max-width: 768px) {
    .about-section {
        padding: 0 1.5rem 1.5rem;
    }

    .about-card,
    .use-cases-card,
    .policy-card {
        padding: 2rem;
    }

    .about-title,
    .use-cases-title,
    .policy-title {
        font-size: 1.35rem;
    }

    .use-case-icon {
        font-size: 1.5rem;
    }

    .use-case-content strong {
        font-size: 1rem;
    }

    .use-case-content p {
        font-size: 0.9rem;
    }
}

@@media (max-width: 480px) {
    .about-section {
        padding: 0 1rem 1rem;
    }

    .about-card,
    .use-cases-card,
    .policy-card {
        padding: 1.5rem;
    }

    .use-case-item {
        flex-direction: column;
        text-align: center;
    }

    .use-case-icon {
        margin: 0;
    }

    .warning-icon-large {
        font-size: 1.5rem;
    }
}
</style>


