@page "/VerifyPin/{code}"
@model ShareItems_WebApp.Pages.VerifyPinModel
@{
    ViewData["Title"] = "Unlock Note - " + Model.Code;
}

<div class="verify-pin-page">
    <div class="verify-pin-container">
        
        <!-- Header -->
        <div class="verify-header">
            <div class="lock-icon">??</div>
            <h1 class="verify-title">Note is Locked</h1>
            <p class="verify-subtitle">This note is protected with a PIN</p>
        </div>

        <!-- Code Badge -->
        <div class="code-display">
            <span class="code-label">Code:</span>
            <span class="code-value">@Model.Code</span>
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="verify-message error">
                <span class="message-icon">??</span>
                <span class="message-text">@Model.ErrorMessage</span>
            </div>
        }

        <!-- PIN Form -->
        <form method="post" class="verify-form">
            <div class="form-group">
                <label for="pin" class="form-label">Enter PIN</label>
                <input 
                    type="password" 
                    id="pin" 
                    name="pin" 
                    class="pin-input" 
                    placeholder="••••" 
                    required 
                    autofocus 
                    autocomplete="off" />
                <small class="form-hint">Enter the 4-digit PIN to unlock this note</small>
            </div>

            <button type="submit" class="btn-unlock">
                <span class="btn-icon">??</span>
                <span class="btn-text">Unlock Note</span>
            </button>
        </form>

        <!-- Footer -->
        <div class="verify-footer">
            <a href="/" class="back-link">
                <span class="back-icon">?</span>
                <span>Back to Home</span>
            </a>
        </div>

    </div>
</div>

<style>
/* ===================================
   VERIFY PIN PAGE STYLES
   =================================== */

.verify-pin-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: #0b0f1a;
}

.verify-pin-container {
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 24px;
    padding: 3rem;
    max-width: 480px;
    width: 100%;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    animation: fadeInUp 0.6s ease-out;
}

@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Header */
.verify-header {
    text-align: center;
    margin-bottom: 2rem;
}

.lock-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    display: inline-block;
    animation: pulse 2s ease-in-out infinite;
}

@@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.05);
        opacity: 0.9;
    }
}

.verify-title {
    font-size: 2rem;
    color: #e5e7eb;
    margin: 0 0 0.5rem 0;
    font-weight: 600;
}

.verify-subtitle {
    font-size: 1rem;
    color: #9ca3af;
    margin: 0;
}

/* Code Display */
.code-display {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: rgba(124, 124, 255, 0.1);
    border: 1px solid rgba(124, 124, 255, 0.3);
    border-radius: 12px;
    margin-bottom: 2rem;
}

.code-label {
    color: #9ca3af;
    font-size: 0.9rem;
    font-weight: 500;
}

.code-value {
    color: #7c7cff;
    font-size: 1.1rem;
    font-weight: 700;
    font-family: 'Courier New', monospace;
}

/* Error Message */
.verify-message {
    padding: 1rem 1.25rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    animation: slideIn 0.4s ease-out;
}

@@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.verify-message.error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
}

.message-icon {
    font-size: 1.2rem;
}

.message-text {
    font-size: 0.95rem;
    font-weight: 500;
}

/* Form */
.verify-form {
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 2rem;
}

.form-label {
    display: block;
    color: #e5e7eb;
    font-size: 0.95rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
}

.pin-input {
    width: 100%;
    padding: 1.25rem 1.5rem;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 12px;
    color: #e5e7eb;
    font-size: 1.5rem;
    font-weight: 600;
    text-align: center;
    letter-spacing: 0.5rem;
    font-family: 'Courier New', monospace;
    transition: all 0.3s ease;
}

.pin-input:focus {
    outline: none;
    border-color: #7c7cff;
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 4px rgba(124, 124, 255, 0.15);
}

.pin-input::placeholder {
    color: #9ca3af;
    letter-spacing: 0.5rem;
}

.form-hint {
    display: block;
    color: #9ca3af;
    font-size: 0.85rem;
    margin-top: 0.5rem;
    text-align: center;
}

/* Unlock Button */
.btn-unlock {
    width: 100%;
    padding: 1.25rem 1.5rem;
    background: #7c7cff;
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(124, 124, 255, 0.35);
    font-family: inherit;
}

.btn-unlock:hover {
    background: #9d9dff;
    box-shadow: 0 6px 20px rgba(124, 124, 255, 0.5);
    transform: translateY(-2px);
}

.btn-unlock:active {
    transform: translateY(0);
    box-shadow: 0 2px 12px rgba(124, 124, 255, 0.35);
}

.btn-icon {
    font-size: 1.5rem;
}

.btn-text {
    font-size: 1.1rem;
}

/* Footer */
.verify-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 10px;
    color: #9ca3af;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.95rem;
}

.back-link:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.2);
    color: #e5e7eb;
}

.back-icon {
    font-size: 1.2rem;
}

/* Responsive */
@@media (max-width: 768px) {
    .verify-pin-page {
        padding: 1.5rem;
    }

    .verify-pin-container {
        padding: 2rem;
    }

    .verify-title {
        font-size: 1.75rem;
    }

    .lock-icon {
        font-size: 3.5rem;
    }

    .pin-input {
        font-size: 1.25rem;
        padding: 1rem 1.25rem;
    }
    
    .btn-unlock {
        padding: 1.125rem 1.5rem;
        font-size: 1rem;
    }
    
    .btn-icon {
        font-size: 1.3rem;
    }
    
    .btn-text {
        font-size: 1rem;
    }
}

@@media (max-width: 480px) {
    .verify-pin-page {
        padding: 1rem;
    }

    .verify-pin-container {
        padding: 1.5rem;
        border-radius: 20px;
    }

    .verify-title {
        font-size: 1.5rem;
    }

    .lock-icon {
        font-size: 3rem;
    }

    .code-display {
        flex-direction: column;
        gap: 0.5rem;
        padding: 0.875rem 1.25rem;
    }
    
    .code-label {
        font-size: 0.85rem;
    }
    
    .code-value {
        font-size: 1rem;
    }
    
    .verify-message {
        padding: 0.875rem 1rem;
    }
    
    .message-text {
        font-size: 0.9rem;
    }
    
    .pin-input {
        font-size: 1.1rem;
        padding: 1rem;
        letter-spacing: 0.35rem;
    }
    
    .form-hint {
        font-size: 0.8rem;
    }
    
    .btn-unlock {
        padding: 1rem 1.25rem;
        font-size: 0.95rem;
    }
    
    .btn-icon {
        font-size: 1.2rem;
    }
    
    .btn-text {
        font-size: 0.95rem;
    }
    
    .back-link {
        font-size: 0.9rem;
        padding: 0.65rem 1rem;
    }
}
</style>

