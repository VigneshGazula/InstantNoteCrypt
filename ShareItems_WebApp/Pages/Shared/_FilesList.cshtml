@model ShareItems_WebApp.Pages.DashboardModel

@if (Model.Files != null && Model.Files.Any())
{
    <div class="files-list">
        @foreach (var file in Model.Files)
        {
            <div class="file-card">
                <div class="file-info">
                    <div class="file-icon-wrapper">
                        @{
                            var icon = file.FileType switch
                            {
                                "image" => "???",
                                "video" => "??",
                                "document" => "??",
                                _ => "??"
                            };
                        }
                        <span class="file-type-icon">@icon</span>
                    </div>
                    <div class="file-details">
                        <h4 class="file-name">@file.FileName</h4>
                        <div class="file-meta">
                            <span class="file-size">@FormatFileSize(file.FileSize)</span>
                            <span class="file-divider">•</span>
                            <span class="file-date">@file.UploadedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
                
                <div class="file-actions">
                    <button type="button" 
                            onclick="previewFile(@file.Id, '@file.FileType', '@file.FileName')" 
                            class="file-action-btn preview-btn"
                            title="Preview">
                        <span>???</span>
                    </button>
                    <a href="/Dashboard/@Model.Code?handler=Download&fileId=@file.Id" 
                       class="file-action-btn download-btn"
                       title="Download"
                       download>
                        <span>??</span>
                    </a>
                    <button type="button" 
                            onclick="deleteFile(@file.Id, '@file.FileName')" 
                            class="file-action-btn delete-btn"
                            title="Delete">
                        <span>???</span>
                    </button>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="no-files">
        <span class="no-files-icon">??</span>
        <p class="no-files-text">No files uploaded yet</p>
    </div>
}

@functions {
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

<style>
/* Files List Styles */
:root {
    --glass-bg: rgba(255, 255, 255, 0.06);
    --glass-border: rgba(255, 255, 255, 0.12);
    --accent-primary: #7c7cff;
    --accent-glow: rgba(124, 124, 255, 0.35);
    --text-primary: #e5e7eb;
    --text-muted: #9ca3af;
    --error-color: #ef4444;
    --success-color: #22c55e;
    --blur-amount: 14px;
    --border-radius-input: 12px;
    --transition-smooth: 0.25s ease;
}

.files-list {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.file-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-input);
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    transition: all var(--transition-smooth);
    backdrop-filter: blur(var(--blur-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount));
}

.file-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--accent-primary);
    box-shadow: 0 4px 16px var(--accent-glow);
}

.file-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
    min-width: 0;
}

.file-icon-wrapper {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(124, 124, 255, 0.1);
    border-radius: 10px;
}

.file-type-icon {
    font-size: 1.5rem;
}

.file-details {
    flex: 1;
    min-width: 0;
}

.file-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.25rem 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.file-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-muted);
}

.file-size, .file-date {
    font-family: 'Courier New', monospace;
}

.file-divider {
    color: var(--text-muted);
}

.file-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
}

.file-action-btn {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid var(--glass-border);
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--transition-smooth);
    font-size: 1.2rem;
    text-decoration: none;
    color: var(--text-primary);
}

.file-action-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--accent-primary);
    transform: translateY(-2px);
}

.preview-btn:hover {
    background: rgba(124, 124, 255, 0.2);
}

.download-btn:hover {
    background: rgba(34, 197, 94, 0.2);
}

.delete-btn:hover {
    background: rgba(239, 68, 68, 0.2);
    border-color: var(--error-color);
}

/* No Files State */
.no-files {
    text-align: center;
    padding: 3rem 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px dashed var(--glass-border);
    border-radius: var(--border-radius-input);
    margin-top: 2rem;
}

.no-files-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
    opacity: 0.5;
}

.no-files-text {
    color: var(--text-muted);
    font-size: 1rem;
    margin: 0;
}

/* Responsive */
@@media (max-width: 640px) {
    .file-card {
        flex-direction: column;
        align-items: flex-start;
    }

    .file-info {
        width: 100%;
    }

    .file-actions {
        width: 100%;
        justify-content: flex-end;
    }
}
</style>
